// -*- mode: jsonc -*-
{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    "font-family": "Hack Nerd Font",
    "height": 30, // Waybar height (to be removed for auto height)
    "output": "eDP-1",
    // "width": 1280, // Waybar width
    "spacing": 0, // Gaps between modules (4px)
    "margin-top": 3,
    "modules-left": [
        "hyprland/workspaces",
        "tray",
        "privacy",
        "custom/fullscreen"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "idle_inhibitor",
        "custom/updates",
        "backlight",
        "wireplumber",
        "hyprland/language",
        "bluetooth",
        "network",
        "battery",
        "custom/power"
    ],
    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "1": "Ôí™",
            "2": "Ôí™",
            "3": "Ôí™",
            "4": "Ôí™",
            "5": "Ôí™",
            "active": "ÔÜí",
            "default": "Ôí™"
            // "default": "ÔÑë"
        },
        "persistent-workspaces": {
            "*": [
                1,
                2,
                3,
                4,
                5
            ]
        },
        "on-click": "activate",
        "on-scroll-up": "hyprctl dispatch workspace e+1",
        "on-scroll-down": "hyprctl dispatch workspace e-1"
    },
    "tray": {
        "spacing": 8
    },
    "custom/fullscreen": {
        "format": "{}",
        "tooltip": false,
        "exec": "~/.dotfiles/scripts/hyprland/find_maximized.sh"
    },
    "privacy": {
        "icon-spacing": 4,
        "icon-size": 18,
        "transition-duration": 150,
        "modules": [
            {
                "type": "screenshare",
                "tooltip": true,
                "tooltip-icon-size": 18
            },
            {
                "type": "audio-out",
                "tooltip": true,
                "tooltip-icon-size": 18
            },
            {
                "type": "audio-in",
                "tooltip": true,
                "tooltip-icon-size": 18
            }
        ]
    },
    "custom/updates": {
        "format": "Û±ßò {}",
        // "format": " ÔÇ´  {} ",
        "escape": true,
        "return-type": "json",
        "exec": "~/.dotfiles/scripts/packages/updates#.sh",
        "restart-interval": 3600,
        "tooltip": false,
        "on-click": "~/.dotfiles/scripts/packages/install_updates.sh"
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "{icon} {percent}%",
        "tooltip": false,
        // "format-icons": [
        //     "Û∞Éú",
        //     "Û∞Éõ",
        //     "Û∞Éö"
        // ],
        "format-icons": [
            "Óèî",
            "Óèì",
            "Óèí",
            "Óèë",
            "Óèê",
            "Óèè",
            "Óèé",
            "Óèç",
            "Óèå",
            "Óèã",
            "Óèä",
            "Óèâ",
            "Óèà",
            "Óè£"
        ],
        "on-scroll-up": "~/.dotfiles/scripts/backlight/bright+.sh",
        "on-scroll-down": "~/.dotfiles/scripts/backlight/bright-.sh"
    },
    "custom/notifications": {
        "format": "ÔÉ≥ {}",
        "escape": true,
        "return-type": "json",
        "exec": "~/.dotfiles/scripts/notifications/notifications#.sh",
        "restart-interval": 60,
        "tooltip": false,
        // "on-click": "~/.dotfiles/scripts/notifications/clear_history.sh",
        "on-click-right": "~/.dotfiles/scripts/notifications/clear_history.sh",
        "on-click-middle": "~/.dotfiles/scripts/notifications/toggle_pause.sh"
    },
    "clock": {
        "format": "ÔÄó  <b>{:L%a %b %d %r}</b>", // %T for 24h
        // "format": "ÔÄó  {:%H:%M}",
        // "format-alt": "ÔóØ {:%A, %B %d, %Y (%R)}",
        // "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "timezones": [
            "Europe/Kyiv"
        ],
        "interval": 1,
        "tooltip": false,
        "calendar": {
            "mode": "year",
            "mode-mon-col": 3,
            "weeks-pos": "left",
            "on-scroll": 1,
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "days": "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        },
        "on-click": "~/.dotfiles/scripts/calendar/calcurse.sh",
        "actions": {
            "on-scroll-up": "tz_up",
            "on-scroll-down": "tz_down"
        }
    },
    "wireplumber": {
        "format": "{icon} {volume}%",
        "format-muted": "ÔÄ¶ {volume}%", // Û∞ñÅ   ÔÄ¶
        "tooltip": false,
        "max-volume": 100,
        "format-icons": [
            // "ÔÄ¶",
            // "ÔÄß",
            "ÔÄ® "
        ],
        "on-click": "~/.dotfiles/scripts/sound/pwvucontrol.sh", //pulseaudio , helvum
        "on-click-right": "~/.dotfiles/scripts/sound/wpctl~.sh",
        "on-click-middle": "~/.dotfiles/scripts/sound/playerctl~.sh",
        "on-scroll-up": "~/.dotfiles/scripts/sound/wpctl+.sh",
        "on-scroll-down": "~/.dotfiles/scripts/sound/wpctl-.sh"
    },
    "battery": {
        "bat": "BAT0",
        "interval": 60,
        "states": {
            "meh": 60,
            "warning": 30,
            "critical": 15
        },
        "tooltip": false,
        "format": "{icon} {capacity}%",
        "format-charging": "Û∞ÇÑ {capacity}%",
        "tooltip-format": "{timeTo}",
        // "format-icons": [
        //     "ÔâÑ",
        //     "ÔâÉ",
        //     "ÔâÇ",
        //     "ÔâÅ",
        //     "ÔâÄ"
        // ],
        "format-icons": [
            "Û∞Çé",
            "Û∞Å∫",
            "Û∞Åª",
            "Û∞Åº",
            "Û∞ÅΩ",
            "Û∞Åæ",
            "Û∞Åø",
            "Û∞ÇÄ",
            "Û∞ÇÅ",
            "Û∞ÇÇ",
            "Û∞Åπ"
        ],
        "max-length": 25
    },
    "bluetooth": {
        "format": "Ôäì {status}",
        "format-connected": "Ôäì con",
        // "format-connected": "Ôäì {device_alias}",
        "format-connected-battery": "Ôäì {device_battery_percentage}%",
        // "format-device-preference": [ "device1", "device2" ], // preference list deciding the displayed device
        // "tooltip-format": "{num_connections} connected",
        "tooltip-format-connected": "{num_connections} connected\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}",
        "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_battery_percentage}%",
        "on-click": "~/.dotfiles/scripts/bluetooth/bluetuith.sh"
    },
    "network": {
        // "interface": "wlp2s0",
        "format": "{ifname}",
        // "format-wifi": "Ôá´  {signalStrength}%",
        "format-wifi": "{icon} {signalStrength}%",
        "format-icons": [
            "Û∞§Ø",
            "Û∞§ü",
            "Û∞§¢",
            "Û∞§•",
            "Û∞§®"
        ],
        "format-ethernet": "{ipaddr}/{cidr} Û∞äó ",
        "format-disconnected": "Û∞§≠ ", //An empty format will hide the module.
        "tooltip-format": "{ifname} via {gwaddr} Û∞äó ",
        "tooltip-format-wifi": "{essid}",
        "tooltip-format-ethernet": "{ifname}",
        // "tooltip-format-disconnected": " Û∞§≠ ",  // Û∞ñ™  Û∞§Æ  Û∞§≠
        "max-length": 50
    },
    "custom/power": {
        "format": "ÔÄë",
        "on-click": "wlogout",
        "tooltip": false
    },
    "hyprland/window": {
        "format": "Ó¨¨ {}", //Ó¨¨   ÔÅã
        "rewrite": {
            // "(.*) ‚Äî Mozilla Firefox": "üåé $1",
            // "(.*) - fish": "Ôíâ [$1]", // Ôíâ  Óûï
            "(.*) - Alacritty": "Ôíâ [$1]" // Ôíâ  Óûï
        },
        "separate-outputs": true
    },
    "hyprland/language": {
        "format": "{}",
        "format-en": "en",
        "format-uk": "ua"
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ ",
            "deactivated": "ÔÅ∞ "
        },
        "tooltip": false
    }
}
